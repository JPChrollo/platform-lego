{
  "name": "fullstack-app",
  "version": "1.0.0",
  "description": "Full-stack application with Next.js frontend and Express.js backend",
  "scripts": {
    "frontend:install": "cd frontend && npm install",
    "backend:install": "cd backend && npm install",
    "install:all": "npm run frontend:install && npm run backend:install",
    "frontend:dev": "cd frontend && npm run dev",
    "backend:dev": "cd backend && npm run dev",
    "frontend:build": "cd frontend && npm run build",
    "start:frontend": "cd frontend && npm run preview",
    "start:backend": "cd backend && npm run start",
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\"",
    "prepare": "husky install",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && eslint .",
    "prettier:check": "prettier --check \"**/*.{js,jsx,json,md}\"",
    "prettier:write": "prettier --write \"**/*.{js,jsx,json,md}\""
  },
  "keywords": [
    "nextjs",
    "express",
    "react",
    "vite",
    "fullstack"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.2.5"
  },
  "lint-staged": {
    "frontend/**/*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "backend/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{json,md}": [
      "prettier --write"
    ]
  }
}
